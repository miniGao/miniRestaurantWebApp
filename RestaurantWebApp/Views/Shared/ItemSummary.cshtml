@model Item

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.ItemName
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.ItemPrice.ToString("c")</small>
            </span>
        </h4>
    </div>
    @*<div class="card-text p-1">@Model.ItemDescription</div>*@
    <form id="@Model.ItemId" asp-action="AddToCart"
          asp-controller="Cart" method="post">
        <input type="hidden" asp-for="ItemId" />
        <input type="hidden" name="returnUrl"
               value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.ItemDescription
            <button type="submit"
                    class="btn btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
</div>